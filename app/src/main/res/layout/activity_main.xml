<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.ramesh.recyclerviewwithleftandrightarrows.widget.RecyclerViewWithNavigationArrows
            android:id="@+id/recycler_view_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ramesh.recyclerviewwithleftandrightarrows.widget.RecyclerViewWithNavigationArrows
            android:id="@+id/recycler_view_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_one"/>

    </android.support.constraint.ConstraintLayout>
</layout>